<Page x:Class="ParcialBonillaAndres.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParcialBonillaAndres"
      mc:Ignorable="d" 
      d:DesignHeight="366" d:DesignWidth="800"
      Title="Login">

    <Grid Background="#FFFFAD5B">
        <Label Content="Iniciar Sección" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36" Margin="0,73,0,0" FontFamily="Brush Script MT"/>
        <Label Content="Usuario" HorizontalAlignment="Left" Margin="335,136,0,0" VerticalAlignment="Top" FontFamily="Candara"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="335,196,0,0" VerticalAlignment="Top" FontFamily="Candara"/>
        <TextBox Name="txtUsername" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,161,0,0" FontFamily="Candara"/>
        <PasswordBox Name="txtPassword" HorizontalAlignment="Center" Margin="0,222,0,0" VerticalAlignment="Top" Width="120" FontFamily="Candara"/>
        <Button Name="btnLogin" Content="Ingresar" HorizontalAlignment="Center" Margin="0,265,0,0" VerticalAlignment="Top" Width="70" Height="23" Click="btnLogin_Click" FontFamily="Candara"/>
    </Grid>
</Page>
